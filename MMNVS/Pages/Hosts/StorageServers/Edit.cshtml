@page
@model MMNVS.Pages.Hosts.StorageServers.EditModel

@{
    ViewData["Title"] = "Úprava storage serveru";
}

<h2>Úprava virtuálního storage serveru</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VirtualStorageServer.Id" />
            <input type="hidden" asp-for="VirtualStorageServer.HostId" />
            <div class="mt-2 form-floating">
                <input asp-for="VirtualStorageServer.Name" class="form-control" />
                <label asp-for="VirtualStorageServer.Name" class="form-label"></label>
                <span asp-validation-for="VirtualStorageServer.Name" class="text-danger"></span>
            </div>
            <div class="mt-2 form-floating">
                <input asp-for="VirtualStorageServer.Notes" class="form-control" />
                <label asp-for="VirtualStorageServer.Notes" class="form-label"></label>
                <span asp-validation-for="VirtualStorageServer.Notes" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <button type="submit" class="w-100 btn btn-outline-dark">Upravit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
