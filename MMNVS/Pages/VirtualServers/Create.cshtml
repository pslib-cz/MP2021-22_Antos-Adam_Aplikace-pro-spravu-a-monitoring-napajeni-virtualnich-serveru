@page
@model MMNVS.Pages.VirtualServers.CreateModel

@{
    ViewData["Title"] = "Nový VM";
}

<h2>Ruční přidání virtuálního serveru</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-2 form-floating">
                <input asp-for="VirtualServer.VMId" class="form-control" />
                <label asp-for="VirtualServer.VMId" class="form-label"></label>
                <span asp-validation-for="VirtualServer.VMId" class="text-danger"></span>
            </div>
            <div class="mt-2 form-floating">
                <input asp-for="VirtualServer.Name" class="form-control" />
                <label asp-for="VirtualServer.Name" class="form-label"></label>
                <span asp-validation-for="VirtualServer.Name" class="text-danger"></span>
            </div>
            <div class="form-check form-switch">
                <input asp-for="VirtualServer.StartServerOnStart" class="form-check-input" type="checkbox" role="switch" />
                <label asp-for="VirtualServer.StartServerOnStart" class="form-check-label"></label>
            </div>
            <div class="mt-2 form-floating">
                <input asp-for="VirtualServer.Notes" class="form-control" />
                <label asp-for="VirtualServer.Notes" class="form-label"></label>
                <span asp-validation-for="VirtualServer.Notes" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <button type="submit" class="w-100 btn btn-outline-secondary">Vytvořit</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Zpět</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
